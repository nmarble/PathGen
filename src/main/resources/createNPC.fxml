<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<BorderPane fx:controller="main.java.CreateNPCController"
            xmlns:fx="http://javafx.com/fxml">
    <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints minWidth="100"/>
            <ColumnConstraints minWidth="100"/>
        </columnConstraints>
        <Label text="Name: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Sex: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="sexField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Race: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="raceField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Class: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="classField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Button text="CREATE" fx:id="okButton" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>
</BorderPane>